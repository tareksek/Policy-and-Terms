{
  "name": "socialsphere-backend",
  "version": "1.0.0",
  "description": "Backend for SocialSphere - A social media platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "dev:windows": "set NODE_ENV=development&& nodemon server.js",
    "prod:windows": "set NODE_ENV=production&& node server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "seed": "node src/scripts/seed.js",
    "seed:test": "node src/scripts/seedTestData.js",
    "clean": "rm -rf node_modules package-lock.json",
    "clean:install": "npm run clean && npm install",
    "docker:build": "docker build -t socialsphere-backend .",
    "docker:run": "docker run -p 5000:5000 socialsphere-backend",
    "heroku-postbuild": "npm install",
    "docs": "node src/scripts/generateDocs.js",
    "monitor": "node src/scripts/monitor.js"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "social-media",
    "express",
    "mongodb",
    "socket.io",
    "nodejs",
    "backend"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
