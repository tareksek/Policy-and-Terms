{
  "name": "social-media-frontend",
  "version": "1.0.0",
  "private": true,
  "description": "React frontend with standalone Express server",
  "scripts": {
    "dev:react": "react-scripts start",
    "dev:server": "node server.js",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:server\"",
    "build": "react-scripts build",
    "start": "node server.js",
    "build:prod": "npm run build && NODE_ENV=production node server.js"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "axios": "^1.6.2",
    "react-query": "^3.39.3",
    "zustand": "^4.4.7",
    "formik": "^2.4.5",
    "yup": "^1.3.3",
    "@mui/material": "^5.14.18",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "socket.io-client": "^4.7.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "proxy": "http://localhost:5000",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
