# ===== Server Configuration =====
NODE_ENV=development
PORT=5000
HOST=0.0.0.0
FRONTEND_URL=http://localhost:3000

# ===== Database =====
MONGODB_URI=mongodb://localhost:27017/socialsphere
MONGODB_TEST_URI=mongodb://localhost:27017/socialsphere_test
REDIS_URL=redis://localhost:6379

# ===== Security =====
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-change-this

# ===== File Upload =====
MAX_FILE_SIZE=52428800 # 50MB
MAX_FILES=10
UPLOAD_PATH=./uploads
CLOUDINARY_URL=cloudinary://your-api-key:your-api-secret@your-cloud-name

# ===== Email (Optional) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@socialsphere.com

# ===== SMS (Optional) =====
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# ===== Payment (Optional) =====
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# ===== Monitoring & Analytics =====
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key
GOOGLE_ANALYTICS_ID=UA-XXXXX-Y

# ===== External APIs =====
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# ===== Rate Limiting =====
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=1000

# ===== Cache =====
CACHE_TTL=600 # 10 minutes
REDIS_CACHE_TTL=3600 # 1 hour

# ===== Feature Flags =====
ENABLE_EMAIL_VERIFICATION=false
ENABLE_SMS_VERIFICATION=false
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_SOCIAL_LOGIN=false
ENABLE_VIDEO_PROCESSING=false
ENABLE_REAL_TIME_NOTIFICATIONS=true

# ===== Maintenance =====
MAINTENANCE_MODE=false
MAINTENANCE_UNTIL=2024-01-01T00:00:00Z

# ===== Performance =====
CLUSTER_MODE=false
WORKER_COUNT=4
COMPRESSION_LEVEL=6